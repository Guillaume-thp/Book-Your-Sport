<div class="jumbotron">

    <!-- VIDEO -->

    <!-- <div class="home-video-wrapper"> -->
    <%-# video_tag "signup_foot.webm", autoplay: :autoplay, loop: :loop, mute: :mute, class: "home_video" -%>
        <!-- </div> -->

        <div class="center">
            <div class="vertical-center">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                        <div id="login-box">
                            <div class="left">
                                <h1>Sign up</h1>
                                <% f.label :email %><br />
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text", placeholder: "Email" %>
                                        <% f.label :password %>
                                            <%= f.password_field :password, autocomplete: "new-password", type: "password", placeholder: "Password" %>
                                                <% if @minimum_password_length %>
                                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                                    <% end %><br />
                                                        <% f.label :password_confirmation %><br />
                                                            <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", placeholder: "Retype password" %>
                                                                <%= f.submit "Sign up" %>
                                                                    <%= render "devise/shared/links" %>

                                                                        <% end %>
                            </div>

                        </div>
            </div>
        </div>
</div>