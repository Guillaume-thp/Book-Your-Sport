    <html>

    <head>
        <title>Timeslot</title>
        <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="asset/stylesheet">
    </head>

    <body>
        <p id="notice">
            <%= notice %>
        </p>
        <%= notice %>
            </p>
            <br><br>
            <h1 class="Montserrat">Créneaux disponibles</h1>
            <br>
            <table>
                <thead>
                    <tr>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% #scrap = ScrapLeFive.new.perform %>
                        <p id="notice">
                            <%= notice %>
                        </p>
                        <br><br>
                        <br>
                        <table>
                            <thead>
                                <tr>
                                    <th colspan="3"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% i = 0 %>
                                    <% #scrap[0].length.times do%>
                                        </div>
                                        </div>
                                        <% #i = i+1 %>
                                            <% #end %>
