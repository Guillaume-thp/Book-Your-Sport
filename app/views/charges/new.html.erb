<div class="center">

    <form class="form-search" action=<%=timeslots_path %> method="GET">


        <%= form_tag charges_path do %>
            <article>
                <% if flash[:error].present? %>
                    <div id="error_explanation">
                        <p>
                            <%= flash[:error] %>
                        </p>
                    </div>
                    <% end %>
                        <label class="amount">
      <span>Amount: $5.00</span>
    </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="Réservez votre créneau" data-amount="500" data-locale="auto"></script>
            <% end %>
</div>